---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

function formatDate(date: Date) {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Layout
  title="Blog | David Peter Hansen"
  description="Thoughts on documentary filmmaking, behind-the-scenes stories, and reflections on the craft."
>
  <Header />
  <main class="pt-24 lg:pt-32 pb-20">
    <div class="mx-auto max-w-3xl px-6 lg:px-12">
      <header class="mb-16">
        <h1 class="font-serif text-4xl lg:text-5xl font-light tracking-tight mb-4">
          Blog
        </h1>
        <p class="text-muted-foreground text-lg">
          Thoughts on documentary filmmaking, behind-the-scenes stories, and reflections on the craft.
        </p>
      </header>

      <div class="space-y-12">
        {posts.map((post) => (
          <article class="group">
            <a href={`/blog/${post.slug}`} class="block">
              {post.data.image && (
                <div class="aspect-video mb-4 overflow-hidden bg-muted">
                  <img
                    src={post.data.image}
                    alt={post.data.imageAlt || post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
              )}
              <time class="text-sm text-muted-foreground">
                {formatDate(post.data.pubDate)}
              </time>
              <h2 class="font-serif text-2xl lg:text-3xl font-light mt-2 mb-3 group-hover:text-muted-foreground transition-colors">
                {post.data.title}
              </h2>
              <p class="text-muted-foreground leading-relaxed">
                {post.data.description}
              </p>
            </a>
          </article>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</Layout>
