---
import { films } from '../lib/films';
---

<section id="work" class="px-6 lg:px-12 py-32 lg:py-44">
  <div class="mx-auto max-w-7xl">
    <div class="flex items-center justify-between mb-12">
      <h2 class="text-sm text-muted-foreground tracking-wide">
        Selected Work
      </h2>
      <span class="text-sm text-muted-foreground">2020 â€” Present</span>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6" id="work-grid">
      {films.map((film) => (
        <a
          href={`/film/${film.slug}`}
          class="group film-card"
          data-film-id={film.id}
        >
          <article>
            <div class="relative aspect-[3/2] overflow-hidden bg-muted mb-4">
              <img
                src={film.image}
                alt={film.title}
                class="absolute inset-0 w-full h-full object-cover transition-all duration-500 opacity-90 group-hover:scale-105 group-hover:opacity-100"
              />
            </div>
            <div class="flex items-start justify-between">
              <div>
                <h3 class="font-serif text-xl text-foreground mb-1 group-hover:text-muted-foreground transition-colors">
                  {film.title}
                </h3>
                <p class="text-sm text-muted-foreground">
                  {film.category}
                </p>
              </div>
              <span class="text-sm text-muted-foreground">
                {film.year}
              </span>
            </div>
          </article>
        </a>
      ))}
    </div>
  </div>
</section>

<script>
  const workGrid = document.getElementById('work-grid');
  const filmCards = workGrid?.querySelectorAll('.film-card');

  filmCards?.forEach((card) => {
    card.addEventListener('mouseenter', () => {
      filmCards.forEach((otherCard) => {
        if (otherCard !== card) {
          const img = otherCard.querySelector('img');
          img?.classList.add('opacity-50');
          img?.classList.remove('opacity-90');
        }
      });
    });

    card.addEventListener('mouseleave', () => {
      filmCards.forEach((otherCard) => {
        const img = otherCard.querySelector('img');
        img?.classList.remove('opacity-50');
        img?.classList.add('opacity-90');
      });
    });
  });
</script>
