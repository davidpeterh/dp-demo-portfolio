<section class="px-6 lg:px-12 py-32 lg:py-44">
  <div class="mx-auto max-w-7xl">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-sm text-muted-foreground tracking-wide">
        Featured Reel
      </h2>
      <span class="text-sm text-muted-foreground">2024</span>
    </div>

    <div
      id="featured-reel"
      class="relative aspect-video bg-foreground/5 overflow-hidden group cursor-pointer"
    >
      <div id="reel-preview">
        <img
          src="/images/reel-thumbnail.jpg"
          alt="Featured reel preview"
          class="absolute inset-0 w-full h-full object-cover opacity-90 group-hover:opacity-100 transition-opacity duration-500"
        />
        <div class="absolute inset-0 flex items-center justify-center">
          <button
            id="play-reel-btn"
            class="w-20 h-20 rounded-full bg-background/90 flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            aria-label="Play reel"
          >
            <svg class="w-8 h-8 text-foreground ml-1" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </button>
        </div>
        <div class="absolute bottom-6 left-6 right-6 flex items-end justify-between">
          <div>
            <h3 class="font-serif text-2xl text-background mb-1">Director's Reel</h3>
            <p class="text-sm text-background/70">Selected works 2019â€“2024</p>
          </div>
          <span class="text-sm text-background/70">03:42</span>
        </div>
      </div>
      <div id="reel-playing" class="hidden absolute inset-0">
        <iframe
          id="vimeo-embed"
          src=""
          class="w-full h-full"
          frameborder="0"
          allow="autoplay; fullscreen; picture-in-picture"
          allowfullscreen
          title="Director's Reel"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<script>
  const playBtn = document.getElementById('play-reel-btn');
  const preview = document.getElementById('reel-preview');
  const playing = document.getElementById('reel-playing');
  const vimeoEmbed = document.getElementById('vimeo-embed') as HTMLIFrameElement;

  playBtn?.addEventListener('click', () => {
    preview?.classList.add('hidden');
    playing?.classList.remove('hidden');
    if (vimeoEmbed) {
      vimeoEmbed.src = 'https://player.vimeo.com/video/213109178?autoplay=1';
    }
  });
</script>
