---
const socialLinks = [
  { label: "Instagram", href: "https://instagram.com" },
  { label: "Vimeo", href: "https://vimeo.com" },
  { label: "IMDb", href: "https://imdb.com" },
  { label: "LinkedIn", href: "https://linkedin.com" },
];
---

<section id="contact" class="px-6 lg:px-12 py-32 lg:py-44 border-t border-border">
  <div class="mx-auto max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24">
      <div>
        <h2 class="text-sm text-muted-foreground tracking-wide mb-8">
          Contact
        </h2>
        <p class="font-serif text-3xl md:text-4xl lg:text-5xl leading-tight text-foreground text-balance">
          Let's create something meaningful together.
        </p>
      </div>

      <div class="flex flex-col justify-end">
        <div class="space-y-8">
          <div>
            <h3 class="text-sm text-muted-foreground mb-3 tracking-wide">Email</h3>
            <a
              href="mailto:hello@magnuslindqvist.com"
              class="text-lg text-foreground hover:text-muted-foreground transition-colors inline-flex items-center gap-2 group"
            >
              hello@magnuslindqvist.com
              <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17"/>
              </svg>
            </a>
          </div>

          <div>
            <h3 class="text-sm text-muted-foreground mb-3 tracking-wide">Representation</h3>
            <p class="text-foreground">Nordic Film Agency</p>
            <a
              href="mailto:contact@nordicfilm.dk"
              class="text-muted-foreground hover:text-foreground transition-colors inline-flex items-center gap-2 group"
            >
              contact@nordicfilm.dk
              <svg class="w-4 h-4 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17"/>
              </svg>
            </a>
          </div>

          <div>
            <h3 class="text-sm text-muted-foreground mb-3 tracking-wide">Social</h3>
            <ul class="flex flex-wrap gap-x-6 gap-y-2">
              {socialLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-foreground hover:text-muted-foreground transition-colors inline-flex items-center gap-1 group"
                  >
                    {link.label}
                    <svg class="w-3 h-3 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 17L17 7M17 7H7M17 7V17"/>
                    </svg>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
